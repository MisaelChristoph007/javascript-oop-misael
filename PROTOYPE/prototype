<body>
    <script>

        function Person(firstName, lastName) {
            this.firstName = firstName;
            this.lastName = lastName;
            this.sayHello = function (name) {
                console.info(`Hello ${name}, nama saya adalah ${this.firstName}`)
            }
        }

        Person.prototype.sayBye = function (){
            console.info("Halo!");
        }

        Person.prototype.run = function (){
            console.info(`${this.firstName} is RunningüèÉ`);
        }

        const misael = new Person("Misael", "Christ");
        misael.sayBye = function () {
            console.info("Halo!")
        }
        const budi = new Person("Budi", "Santoso");

        console.log(misael);
        console.log(budi);

        misael.sayBye();
        misael.run();

    </script>
</body>
